<%# <%= link_to 'favorite suppliers', favorite_companies_path(1) %>
<div>
  <h3>Empresas destacadas</h3>
  <%= link_to 'Ver todas', suppliers_path %>
</div>
  <div class="row card-group">
    <% @suppliers.each do |s| %>
      <div class="col-lg-3 col-sm-6 sup-card">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="https://acsaportones.com/wp-content/uploads/2015/11/default-placeholder-300x300.png" alt="Card image cap">
          <div class="card-body">
            <div>
              <h5 class="card-title"><%= s.company %></h5>
              <p><%= link_to 'favorite', favorite_companies_path(s), method: :post %></p>
            </div>
            <p class="card-text">Aqui va la descripcion de cada empresa.</p>
             <%= link_to 'mas informacion', supplier_path(s), class:'btn proveedor-btn w-100' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<div>
  <h3>Proovedores de productos</h3>
  <div class="row">
    <% @categories.each do |c| %>
      <div class="col-lg-3 col-sm-6">
        <div>
          <div class="card-body">
            <h5 class="card-title"><%= c.name %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
