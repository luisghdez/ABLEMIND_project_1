              <div class="card-body">
                <div>
                  <h5 class="card-title"><%= s.name %></h5>
                  <p><%= s.likes.count %> <%= link_to 'like', post_likes_path(s), method: :post %></p>
                </div>
                <p class="card-text">Aqui va la descripcion de cada empresa.</p>
                <%= link_to 'Mas informacion', post_path(s), class:'btn register-btn w-100' %>
              </div>
            </div>
          </div>
        <% end %>
